{
  "name": "@colorfy-software/chatify",
  "version": "1.0.0",
  "description": "Delightful chatbot library for React Native",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib"
  ],
  "scripts": {
    "lint": "eslint \"**/*.{js,ts,tsx}\" --fix",
    "type": "tsc --noEmit -p ./tsconfig.build.json",
    "test": "jest --updateSnapshot --verbose",
    "pre-commit": "yarn lint && yarn type && yarn test",
    "prepare": "bob build",
    "release": "release-it",
    "example": "yarn --cwd example",
    "pods": "cd example && pod-install --quiet",
    "bootstrap": "yarn example && yarn && yarn pods"
  },
  "keywords": [
    "react-native",
    "ios",
    "android",
    "chatbot"
  ],
  "repository": "https://github.com/colorfy-software/chatify",
  "author": "Kristjan Vool <kristjanfou@gmail.com> (https://github.com/iremlopsum)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/colorfy-software/chatify/issues"
  },
  "homepage": "https://github.com/colorfy-software/chatify#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "dependencies": {
    "react-native-gesture-handler": "^2.6.1",
    "react-native-reanimated": "^3.14.0"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.7",
    "@babel/eslint-parser": "^7.18.2",
    "@colorfy-software/eslint-config": "^0.5.1",
    "@commitlint/config-conventional": "^17.0.2",
    "@react-native-community/eslint-config": "^3.2.0",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.2.1",
    "@types/react": "^18.0.24",
    "commitlint": "^17.0.2",
    "eslint": "^8.19.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^29.2.1",
    "lefthook": "^1.1.1",
    "pod-install": "^0.1.0",
    "prettier": "^2.4.1",
    "react": "18.2.0",
    "react-native": "0.71.14",
    "react-native-builder-bob": "^0.18.3",
    "release-it": "^15.0.0",
    "typescript": "4.8.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-gesture-handler": "*",
    "react-native-reanimated": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        2,
        "always",
        500
      ]
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "extends": "@colorfy-software"
  },
  "eslintIgnore": [
    "scripts/bootstrap.js",
    "node_modules/",
    "example/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "useTabs": false,
    "bracketSpacing": true,
    "bracketSameLine": true,
    "semi": false,
    "printWidth": 120,
    "arrowParens": "avoid"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
